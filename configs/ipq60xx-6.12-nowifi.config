#
# ===== Target =====
#
CONFIG_TARGET_ipq60xx=y
CONFIG_TARGET_ipq60xx_generic=y

# ⚠️ 必须选一个真实存在的 profile（示例）
# 你可以之后替换成自己的设备
# CONFIG_TARGET_PROFILE="DEVICE_qcom_ipq6018_cp01"

#
# ===== RootFS / Filesystem =====
#
CONFIG_TARGET_ROOTFS_EXT4FS=y
CONFIG_TARGET_EXT4_BLOCKSIZE=4096
CONFIG_TARGET_EXT4_RESERVED_PCT=0
CONFIG_TARGET_EXT4_JOURNAL=y
CONFIG_TARGET_ROOTFS_PARTSIZE=512

# 不要 squashfs
# CONFIG_TARGET_ROOTFS_SQUASHFS is not set
# CONFIG_TARGET_IMAGES_GZIP is not set

#
# ===== Package manager : APK =====
#
CONFIG_USE_APK=y
CONFIG_PACKAGE_opkg-apk=y
CONFIG_PACKAGE_apk-mbedtls=y

# 禁用传统 opkg
# CONFIG_PACKAGE_opkg is not set

#
# ===== Base system =====
#
CONFIG_PACKAGE_base-files=y
CONFIG_PACKAGE_busybox=y
CONFIG_PACKAGE_ca-bundle=y
CONFIG_PACKAGE_ca-certificates=y
CONFIG_PACKAGE_libc=y
CONFIG_PACKAGE_libgcc=y
CONFIG_PACKAGE_libpthread=y
CONFIG_PACKAGE_libstdcpp=y

#
# ===== Init / Shell =====
#
CONFIG_PACKAGE_procd=y
CONFIG_PACKAGE_ubus=y
CONFIG_PACKAGE_ubusd=y
CONFIG_PACKAGE_rpcd=y
CONFIG_PACKAGE_rpcd-mod-file=y
CONFIG_PACKAGE_rpcd-mod-iwinfo=y
CONFIG_PACKAGE_rpcd-mod-luci=y

#
# ===== Network =====
#
CONFIG_PACKAGE_netifd=y
CONFIG_PACKAGE_firewall4=y
CONFIG_PACKAGE_iproute2=y
CONFIG_PACKAGE_iptables-nft=y
CONFIG_PACKAGE_nftables=y
CONFIG_PACKAGE_dnsmasq=y
CONFIG_PACKAGE_dropbear=y

#
# ===== LuCI (可选，但推荐) =====
#
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-base=y
CONFIG_PACKAGE_luci-mod-admin-full=y
CONFIG_PACKAGE_luci-theme-bootstrap=y

#
# ===== Utilities =====
#
CONFIG_PACKAGE_htop=y
CONFIG_PACKAGE_curl=y
CONFIG_PACKAGE_wget=y
CONFIG_PACKAGE_openssl-util=y

#
# ===== 禁止 kernel / debug / perf（关键） =====
#
# CONFIG_KERNEL_DEBUG_FS is not set
# CONFIG_KERNEL_PERF_EVENTS is not set
# CONFIG_KERNEL_PROFILING is not set
# CONFIG_KERNEL_KASAN is not set
# CONFIG_KERNEL_KCOV is not set
# CONFIG_KERNEL_UBSAN is not set

#
# ===== 禁止 host / build 信息展开 =====
#
# CONFIG_HOST_OS_LINUX is not set
# CONFIG_HAVE_DOT_CONFIG is not set
